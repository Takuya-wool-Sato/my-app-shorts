<div class="p-5">
  <h1 class="font-bold text-4xl">プロフィール</h1>
  <p class="mt-5">メールアドレス</p>
  <p>
    <%= @user.email %>
  </p>

  <!-- You can open the modal using ID.showModal() method -->
  <button class="btn btn-outline btn-error mt-10" onclick="my_modal_3.showModal()">アカウント削除</button>
  <dialog id="my_modal_3" class="modal">
    <div class="modal-box" style="width: 100% !important;">
      <form method="dialog">
        <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
      </form>
      <h3 class="font-bold text-lg">アカウント削除しますか？</h3>
      <p class="py-4">
        <%= link_to '削除します', users_destroy_path, class: "btn btn-outline btn-error" %>
      </p>
    </div>
  </dialog>


</div>