<%= form_with(model: setting, class: "contents" ) do |form| %>
  <% if setting.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2>
        <%= pluralize(setting.errors.count, "error" ) %> prohibited this setting from being saved:
      </h2>

      <ul>
        <% setting.errors.each do |error| %>
          <li>
            <%= error.full_message %>
          </li>
          <% end %>
      </ul>
    </div>
    <% end %>

      <div class="mt-3">
        <%= form.label :swipe_type, style: "display: block" %>
          <%= form.collection_radio_buttons :swipe_type, @swipe_types, :last, :first,
            class: "input input-bordered w-full" %>
      </div>

      <div class="mt-3">
        <%= form.label :interval, style: "display: block" %>
          <input class="range" min="1000" max="9000" type="range" value="<%= @setting.interval %>"
            name="setting[interval]" id="setting_interval">
          <div class="flex justify-between w-full">
            <div>短</div>
            <div>長</div>
          </div>
      </div>

      <div class="mt-3">
        <%= form.label :text_anime, style: "display: block" %>
          <%= form.check_box :text_anime ,{}, "true" , "false" %>
      </div>

      <div class="inline">
        <%= form.submit class: "btn btn-accent rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer mt-3 btn btn-accent "
          %>
      </div>
      <% end %>