<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-3">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "input input-bordered w-full" %>
  </div>

  <div class="mt-3">
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content, class: "textarea textarea-bordered w-full min-h-64", style: "min-height: 7rem !important;" %>
  </div>

  <div class="mt-3">
    <%= form.label :url, style: "display: block" %>
    <%= form.text_field :url, class: "input input-bordered w-full"  %>
  </div>

  <% @categories.each do |category| %>
    <label class="inline-flex mt-3 mr-3"><%= form.radio_button(:category_id, category.id, class: "radio radio-accent")  %><span class="ml-1"><%= category.name %></span></label>
  <% end %>

  <div class="mt-3">
    <%= form.submit class: "btn btn-accent" %>
  </div>
<% end %>
