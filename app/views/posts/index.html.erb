<div id="posts" class="h-full">
  <div class="splide h-full" role="group" aria-label="" id="splideSection">
    <div class="splide__track h-full">
      <ul class="splide__list h-full">
        <% @posts.each do |post| %>
          <li class="splide__slide h-full p-5">
            <%= link_to post, class: 'no-underline block' do %>
              <%= render post %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="splide__progress">
      <div class="splide__progress__bar">
      </div>
    </div>
  </div>
</div>

<!-- Open the modal using ID.showModal() method -->
<button class="btn absolute right-5 bottom-20 rounded-full" onclick="my_modal_2.showModal()"><svg width="18" height="18" viewBox="0 0 48 48" class="w-5 h-5" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M7 42H43" stroke="currentColor" stroke-width="4" stroke-linecap="butt" stroke-linejoin="bevel"></path><path d="M11 26.7199V34H18.3172L39 13.3081L31.6951 6L11 26.7199Z" fill="none" stroke="currentColor" stroke-width="4" stroke-linejoin="bevel"></path></svg></button>
<dialog id="my_modal_2" class="modal">
  <div class="modal-box fixed m-auto w-full left-0 right-0">
    <h3 class="font-bold text-lg">クイックメモ</h3>
    <%= form_with(model: @post) do |form| %>
      <% if @post.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this @post from being saved:</h2>

          <ul>
            <% @post.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mt-3">
        <%= form.label :title, style: "display: block" %>
        <%= form.text_field :title, class: "input input-bordered w-full" %>
      </div>

      <%= form.text_area :content, class: "textarea textarea-bordered w-full min-h-40 hidden" %>

      <div class="mt-3">
        <%= form.label :url, style: "display: block" %>
        <%= form.text_field :url, class: "input input-bordered w-full"  %>
      </div>

      <%= form.radio_button(:category_id, 1, class: "radio radio-accent hidden")  %>

      <div class="mt-5">
        <%= form.submit class: "btn btn-accent" %>
      </div>
    <% end %>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button class="fixed m-auto w-full h-full left-0 right-0">close</button>
  </form>
</dialog>

<style>
  .splide__progress__bar {
    height: 3px;
    background: #ccc;
  }
</style>